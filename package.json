{
  "name": "home-stack",
  "main": "src/index.ts",
  "scripts": {
    "format": "prettier --write ."
  },
  "dependencies": {
    "@pulumi/docker": "^4.5.3",
    "@pulumi/pulumi": "^3.113.0",
    "typescript": "^5.0.0",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@types/node": "^18",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 100,
    "arrowParens": "avoid",
    "trailingComma": "all",
    "organizeImportsSkipDestructiveCodeActions": true,
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
